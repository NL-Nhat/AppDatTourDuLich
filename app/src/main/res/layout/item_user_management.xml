<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <TextView android:id="@+id/txt_user_id" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="1" android:textColor="@android:color/black"/>

    <TextView android:id="@+id/txt_user_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4" android:text="User Name" android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_sua"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Sửa"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            app:icon="@drawable/ic_edit"
            app:iconSize="14dp"
            app:iconTint="@color/white"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/btn_xoa"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Khóa"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:backgroundTint="#F44336"
            android:layout_marginTop="4dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="14dp"
            app:iconTint="@color/white"
            app:iconGravity="textStart"/>
    </LinearLayout>
</LinearLayout>