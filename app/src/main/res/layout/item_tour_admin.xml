<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Tour Image -->
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/tour_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/quang_ninh"/>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/trangThaiTour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang mở"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/trangthai_tour_mo"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"/>

            <!-- Sao -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FFD700"/>

                <TextView
                    android:id="@+id/tour_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="3dp"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Tour Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour du lịch Quảng Ninh"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_map"
                    app:tint="#757575"/>

                <TextView
                    android:id="@+id/tour_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quảng Ninh"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_tick"
                    app:tint="#757575"/>

                <TextView
                    android:id="@+id/tour_bookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 đơn đặt"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tour_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1,250,000 VND"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#667eea"/>

                <ImageView
                    android:id="@+id/btn_edit_tour"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_edit"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="#667eea"/>

                <ImageView
                    android:id="@+id/btn_delete_tour"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_delete"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="8dp"
                    app:tint="#F44336"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>